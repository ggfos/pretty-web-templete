                        <td><a href="@base.homePage">website</a></td>
                        <td>
                            <div class="form-group">
                                <label class="sr-only" for="role_@mid">Enter role</label>
                                <input type="text" class="form-control" id="role_@mid" placeholder="Enter role"
                                       value="@role" onchange="roleChange('@mid', this.value.trim());">
                            </div>
                        </td>
                        <td>
                            <select class="form-control" onchange="authChange('@mid', this.value);">
                                <option value="@auth">@{
                                    auth match {
                                    case 0 => "Member"
                                    case 1 => "Manager"
                                    case 2 => "Owner"
                                    case _ => "Error"
                                    }
                                    }
                                </option>
                                <option value="2">Owner</option>
                                <option value="1">Manager</option>
                                <option value="0">Member</option>
                            </select>
                        </td>
                        <td>
                            <a href="/events/member/delete?exhibitorId=@exhibitorId&otherId=@mid"
                               title="delete"> <span class="glyphicon glyphicon-trash"></span></a>
                        </td>
                    </tr>
                    }
                    </tbody>
                </table>
